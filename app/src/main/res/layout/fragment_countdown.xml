<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/progressRect"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:weightSum="3"
                android:id="@+id/linearLayout">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/relativeLayout0">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hours"
                        android:id="@+id/unitLabelTextView0"
                        android:textColor="#ffffff"
                        android:paddingLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/unitLabelTextView0"
                        android:id="@+id/linearLayout0">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/digitTextView00"
                            android:fontFamily="sans-serif-light" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="1dp"
                            android:id="@+id/digitTextView01"
                            android:fontFamily="sans-serif-light" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/relativeLayout1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minutes"
                        android:id="@+id/unitLabelTextView1"
                        android:textColor="#ffffff"
                        android:paddingLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/unitLabelTextView1"
                        android:id="@+id/linearLayout1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/digitTextView10"
                            android:fontFamily="sans-serif-light" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="1dp"
                            android:id="@+id/digitTextView11"
                            android:fontFamily="sans-serif-light" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/relativeLayout2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="seconds"
                        android:id="@+id/unitLabelTextView2"
                        android:textColor="#ffffff"
                        android:paddingLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/unitLabelTextView2"
                        android:id="@+id/linearLayout2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/digitTextView20"
                            android:fontFamily="sans-serif-light" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="50dp"
                            android:background="@drawable/digit_background"
                            android:textAlignment="center"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="1dp"
                            android:id="@+id/digitTextView21"
                            android:fontFamily="sans-serif-light" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:text="Until Hacking Begins"
                android:id="@+id/labelTextView"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/updatesListView"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0dp"/>
    </LinearLayout>
</RelativeLayout>